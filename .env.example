# Discord Bot Token - 必須在 Discord Developer Portal 取得
DISCORD_TOKEN=

# YouTube API Key - 需在 Google Cloud Platform 取得
YOUTUBE_API_KEY=

# Tenor API Key - 需在 Tenor API 開發者平台取得
TENOR_API_KEY=
TENOR_API_URL=https://tenor.googleapis.com/v2/search

# 其他設置
PYTHONUNBUFFERED=1
COMMAND_PREFIX=!

# 檔案路徑設定
DATA_DIR=data
EMOJI_DATA_FILE=emoji_data.json
PLAYLIST_DATA_FILE=playlists.json
REMINDERS_DATA_FILE=reminders.json

# FFmpeg 路徑設定 (選用，會自動搜尋)
# FFMPEG_PATH=ffmpeg
